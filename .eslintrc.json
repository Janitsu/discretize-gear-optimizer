{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "ignorePatterns": [
        "gulpfile.js"
    ],
    "extends": ["standard", "standard-jsx", "standard-react", "prettier"],
    "rules": {
        "semi": [
            "error", 
            "always"
        ],
        "no-extra-semi": "error",

        "padded-blocks": "off",

        //temp
        "react/prop-types": "off",
        "no-unused-vars": "off",


        "dot-notation": "off",
        "no-case-declarations": "off",
   
    //     "operator-linebreak": [
    //         "warn",
    //         "before"
    //     ],
    //     "max-len": [
    //       "warn",
    //       { 
    //           "code": 100,
    //           "ignoreComments": true
    //       }
    //   ],

        "no-lonely-if": "warn",
        "radix": "warn",
        "default-case": "warn",
        "no-param-reassign": [
            "warn", 
            { 
                "props": false 
            }
        ],
        "no-else-return": "warn",
        "no-shadow": "warn",
        "consistent-return": "warn",
        //"object-shorthand": "warn",
        "guard-for-in": "warn",
        "no-underscore-dangle": "warn"
    }
}